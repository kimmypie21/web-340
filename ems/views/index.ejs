<%- include ("header") %>

<body>

<%- include ("navbar") %>


<div id="container">

  <div class="jumbotron" >
    <h1 class="display-4">Welcome</h1>

    <p class="lead">EMS Employee Management System</p>
    <hr class="my-4">

    <div class="card-deck">

      <div class="card">
        <img src="/images/view_all.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><a href="list">Manage Employees</a></h5>
          <p class="card-text">View and edit active employees</p>
        </div>
      </div>

      <div class="card">
        <img src="/images/reports.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><a href="#">Payroll</a></h5>
          <p class="card-text">Time sheets and payroll.</p>
        </div>
      </div>

      <div class="card">
        <img src="/images/benefits.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><a href="#">Benefits Administration</a></h5>
          <p class="card-text">View and edit employee benefits.</p>
        </div>
      </div>

    </div>

    <div id="csrf">
    <h2><%= message %></h2>
      <form method="post" action="/process">
      <div class="form-group">
        <label for="txtName">Name: </label>
        <input type="text" class="form-control" id="txtName" name="txtName">
      </div>
      <div class="form-group">
        <!--CSRF token-->
        <input name="_csrf" value="<%= csrfToken %>" type="hidden">
        <button type="submit" class="btn btn-secondary float-right">Submit</button>
      </div>
      </form>
    </div>

  </div>



<%- include ("footer") %>

</div>

</body>

