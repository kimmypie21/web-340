     <div class="tab-pane fade" id="tab5Id" role="tabpanel"></div>
   </div>

   <script>
     $('#navId a').click(e => {
       e.preventDefault();
       $(this).tab('show');
     });
   </script>

   <div role="main" class="container">
     <br><br>
     <h1>Product I.D: <%=productId%></h1>

